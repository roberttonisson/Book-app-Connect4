@page
@model WebApp.Pages.Publishers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Publisher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher.PublisherName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.PublisherName)
        </dd>
        <dt class="col-sm-2">
            <p>Total books</p>
        </dt>
        <dd class="col-sm-10">
            <p>@Model.Publisher.Books!.Count</p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher.Books)
        </dt>
        <dd class="col-sm-10">
            @foreach (var book in Model.Publisher.Books)
            {
                <p>
                    <a asp-page="/Books/Details" asp-route-id="@book.BookId" >@Html.DisplayFor(modelItem => book.Title)</a>
                </p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Publisher.PublisherId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
