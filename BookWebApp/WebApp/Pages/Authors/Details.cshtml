@page
@using Domain
@model WebApp.Pages.Authors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.YearOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.YearOfBirth)
        </dd>
        <dt class="col-sm-2">
            <p>Total books</p>
        </dt>
        <dd class="col-sm-10">
            <p>@Model.Author.AuthorBooks.Count</p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.AuthorBooks)
        </dt>
        <dd class="col-sm-10">
            @foreach (var book in Model.Author.AuthorBooks)
            {
                <p>
                    <a asp-page="/Books/Details" asp-route-id="@book.Book.BookId" >@Html.DisplayFor(modelItem => book.Book.Title)</a>
                </p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Author.AuthorId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>