@page
@model WebApp.Pages.GameStart.IndexModel

@{
    ViewData["Title"] = "GameStart";
}

<h1>Start a new game</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SaveName" class="control-label"></label>
                <input asp-for="SaveName" class="form-control" />
                <span asp-validation-for="SaveName" class="text-danger"></span>
            </div>
            <div>
                @foreach (var savegame in Model.GameModes)
                {
                    <input type="radio" asp-for="GameMode" value="@savegame" checked="checked"/>@savegame<br />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>