@page
@model WebApp.Pages_GameConfig.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>GameConfig</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BoardHeight" class="control-label"></label>
                <input asp-for="BoardHeight" class="form-control" />
                <span asp-validation-for="BoardHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoardWidth" class="control-label"></label>
                <input asp-for="BoardWidth" class="form-control" />
                <span asp-validation-for="BoardWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
